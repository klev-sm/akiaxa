<%- include("../../adminPartials/adminHeader.ejs") %>
<body> 
    <%- include("../../adminPartials/navbar.ejs") %>
    <div class="container">
        <br>
        <div class="card">
            <header class="card-header">
                <p class="card-header-title title is-3">Usuários</p>
            </header>
        </div>
        <br>
        <div class="card-body">
            <a href="/admin/users/create" class="button is-link">Criar Novo</a>
        </div>
        <hr>
        <table class="table is-bordered is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script>
    function confirmDelete(e, form) {
        e.preventDefault()
        let c = confirm("Você tem certeza que deseja apagar esta categoria? ")
        if(c) {
            form.submit()
        }
    }
</script>

</html>