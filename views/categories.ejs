<%- include("./partials/header.ejs") %>
<body>
    <%- include("./partials/homenavbar.ejs") %>
    <br>
    <div class="container">
        <div class="columns">
            <% categories.rows.forEach((categorie) => { %>
                <div class="column is-one-quarter">
                    <a href="/<%= categorie.slug %>/1">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    <img src="/uploads/resized/categories/<%= categorie.image %>">
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media-content">
                                    <p class="title is-4"><%= categorie.title %></p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>   
        </div>
